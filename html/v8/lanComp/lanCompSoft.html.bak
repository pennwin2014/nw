<html>

<head>
	<meta http-equiv="Content-Type" content="text/html; charset=gb2312">
	<title>软件类型定义</title>
	<link rel="stylesheet" type="text/css" href="/newver/resources/css/ext-all.css" /> 
	<script type="text/javascript" src="/newver/resources/js/ext-all.js"></script>
	<script type="text/javascript" src="/newver/resources/locale/ext-lang-zh_CN.js"></script>
	<style type="text/css">
    .accept {
        background-image:url(/newver/resources/themes/images/share/accept.png) !important;
    }
	 .x-tab-default-top button, .x-tab-default-top.x-tab-inner {
	  height: 16px !important;
	  line-height: 16px;
	  }
	</style>
  <script type="text/javascript">
  	var softClass = "";
  	var compId = "";
  	var groupId = "";
  	var keywords = "";
  	var ready = 0;
  	
  	Ext.define('EimData2', {
      extend: 'Ext.data.Model',
      fields: ['softName','softSize','version','instTime','demo','business','infoType']
    });
    
   	var softStore = Ext.create('Ext.data.Store', {
      pageSize: 40,
      model: 'EimData2',
      remoteSort: true,
      proxy: {
        type: 'ajax',
        url: '/pronline/Msg?FunName@lan_comp_soft_search',
        reader: {
          type:'json',
          root: 'eimdata',
          totalProperty: 'totalCount'
        },         
        simpleSortMode: true
      }
    });
    
    function softStoreReflash(){
    	keywords = Ext.getCmp('keywords').getValue();
    	softStore.load({params:{
    		groupId: groupId,
      	compId: compId,
      	keywords:keywords
      }});
    }
	
	 	function SetPage(){
			softStore.currentPage=1;
		}
  
  	function reflash(){
  		var title = "";
  		
			if(ready == 1){
				var title = "";
				alert(parent.compidTmp);
			if(parent.compidTmp != null && parent.compidTmp.substring(parent.compidTmp.length - 4,parent.compidTmp.length) == "comp"){
				groupId = "";
				compId = parent.compidTmp.substring(0,parent.compidTmp.length - 4);
				title = "计算机："+parent.compNameTmp;
			}else{
				groupId=parent.groupid;
				compId=parent.compid;
				title = parent.dxtitle;
			}
  			
  			if(title != ""){
					Ext.getCmp('compSoftPanel').setTitle(title);
				}else{
					Ext.getCmp('compSoftPanel').setTitle("计算机：未选");
				}
  			softStoreReflash();
  		}
  	}
  	
  	Ext.onReady(function() {
  		ready = 1;
  		//初始化标签中的Ext:Qtip属性。
			Ext.QuickTips.init();
			Ext.form.Field.prototype.msgTarget = 'side';
  		  		
  		Ext.define('EimData', {
	      extend: 'Ext.data.Model',
	      fields: ['id','text','leaf']
	    });
  	
	  	var softClassStore = Ext.create('Ext.data.TreeStore', {
	      model: 'EimData',
	      proxy: {
	        type: 'ajax',
	        url: '/pronline/Msg?FunName@lan_soft_class_search_base'
	      }
	  	});
	  	
		  Ext.create('Ext.grid.Panel',{
		  	renderTo:Ext.getBody(),
				width: '100%',
				title: '计算机：(未选)',
				id:		'compSoftPanel',
				height: '100%',
				store: softStore,
				columnLines:true,
				columns:[{
          text:"软件名称",
          dataIndex: 'softName',
          flex:2.5,
          hidden: false,
          sortable: false,
          renderer: function(value, metaData, data) {
          	var cname = value;
          		metaData.tdAttr = 'data-qtip="'+value+'"';
            return value;
          }
        },{
          text: "软件类型",
          dataIndex: 'infoType',
          flex:1,
          sortable: false
        },{
          text: "软件大小",
          dataIndex: 'softSize',
          sortable: false
        },{
          text: "版本",
          flex:1.5,
          dataIndex: 'version',
          sortable: false
        },{
          text: "生产厂商",
          flex:2,
          dataIndex: 'business',
          sortable: false,
          renderer: function(value, metaData, data) {
          	var cname = value;
          	if(value.length>30){
          		metaData.tdAttr = 'data-qtip="'+value+'"';
          		cname = value.substring(0,30)+"...";
          	}
            return cname;
          }
        },{
          text: "安装时间",
          dataIndex: 'instTime',
          flex:1,
          sortable: false
        },{
          text: "备注",
          flex:2,
          dataIndex: 'demo',
          sortable: false,
          renderer: function(value, metaData, data) {
          	metaData.tdAttr = 'data-qtip="'+value+'"';
            return value;
          }
        }],
        tbar: [{
        	xtype: 'pagingtoolbar',
        	store: softStore,
        	border: 0,
        //	displayInfo: true,
        //  displayMsg: '显示{0} - {1}条记录 共{2}条',
       //   emptyMsg: '没有记录可显示',
          doRefresh:function(){ 
      			softStoreReflash();
			    },
			    moveLast:function(){
			    	var b=this,a=b.getPageData().pageCount;
			    	if(b.fireEvent("beforechange",b,a)!==false){
			    		softStore.currentPage=a;
			    		softStoreReflash();
			      }
			    },
			    moveFirst:function(){
				    if(this.fireEvent("beforechange",this,1)!==false){
				     	softStore.currentPage=1;
				    	softStoreReflash();
				    }
				  }, 
			   	movePrevious:function(){
			   		var b=this,a=b.store.currentPage-1;
			   		if(a>0){
			   			if(b.fireEvent("beforechange",b,a)!==false){
			   				softStore.currentPage=a;
			   				softStoreReflash();
			   			}
			   		}
			   	},
			   	moveNext:function(){
			   		var c=this,b=c.getPageData().pageCount,a=c.store.currentPage+1;
			   		if(a<=b){
			   			if(c.fireEvent("beforechange",c,a)!==false){
			   				softStore.currentPage=a;
			   				softStoreReflash();
			   			}
			   		}
			   	},  
			    onPagingKeyDown:function(i,h){
			    	var d=this,b=h.getKey(),c=d.getPageData(),a=h.shiftKey?10:1,g;
			    	if(b==h.RETURN){
			    		h.stopEvent();
			    		g=d.readPageFromInput(c);
			        if(g!==false){
			        	g=Math.min(Math.max(1,g),c.pageCount);
			         	if(d.fireEvent("beforechange",d,g)!==false){
					        //d.softStore.loadPage(g)
					        d.store.currentPage=g;
				         	softStoreReflash();
				        }        
				      }
				    }else{
			      	if(b==h.HOME||b==h.END){
			    			h.stopEvent();g=b==h.HOME?1:c.pageCount;i.setValue(g)
			       	}else{
			        	if(b==h.UP||b==h.PAGEUP||b==h.DOWN||b==h.PAGEDOWN){
				          h.stopEvent();g=d.readPageFromInput(c);
				          if(g){
				            if(b==h.DOWN||b==h.PAGEDOWN){a*=-1}
				            g+=a;
				            if(g>=1&&g<=c.pages){
				            	i.setValue(g)
				            }
				          }
			         	}
			        }
			      }  
			    } 
        },{
	    		labelWidth: 50,
	        fieldLabel:'关键字',
	        xtype: 'textfield',
	        width: 200,
	        emptyText: '输入服务名/服务描述',
	        id:'keywords'                    
		    	},{
		    		xtype: 'button',
		    		text: '确定',
		    		iconCls:'accept',
		    		handler: function(){
	  					softStoreReflash();
		    		}
		    	}]/*,
        listeners:{
					'itemcontextmenu' : function(view, rcd, item, idx, event, eOpts){
						event.stopEvent();
						Ext.create('Ext.menu.Menu', {
							floating:	true,
							items: [{
								text: '卸载',
								handler: function(){
									Ext.Msg.show({
								  	title:'卸载',
								    msg: '确定要卸载?',
								    buttons: Ext.Msg.YESNO,
								    icon: Ext.Msg.QUESTION,
								    fn:function(btnId,textValue){
								    	if(btnId=='yes'){
								    		Ext.Msg.alert('卸载','卸载'+rcd.get('softName')+'成功！');											    		
								    	}else if(btnId=='no'){
								    		Ext.Msg.alert('卸载','卸载'+rcd.get('softName')+'放弃！');
								    	}
								    }
									});
								}
							},{
								text: '更改',
								handler: function(){
									Ext.Msg.show({
								  	title:'更新成功',
								    msg: '更新成功',
								    buttons: Ext.Msg.CANCEL,
								    icon: Ext.Msg.QUESTION
									});
								}
							},{
								text: '修复',
								handler: function(){
									Ext.Msg.show({
								  	title:'修复成功',
								    msg: '修复成功',
								    buttons: Ext.Msg.CANCEL,
								    icon: Ext.Msg.QUESTION
									});
								}
							}]	
						}).showAt(event.getXY());
					}
				}*/
			});
			
	  	reflash();
		});
  </script>
</head>
