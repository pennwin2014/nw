    <script type="text/javascript" src="/newver/resources/js/ext-all.js"></script>

  <script>  



Ext.Loader.setConfig({enabled: true});
Ext.Loader.setPath('Ext.ux', '/newver/ux/');
Ext.require([
    'Ext.form.*',
    'Ext.window.*',
    'Ext.grid.*',
    'Ext.data.*',
    'Ext.util.*',
    'Ext.window.MessageBox',
    'Ext.toolbar.Paging',
    'Ext.ux.PreviewPlugin',
//    'Ext.ModelManager',
//    'Ext.tip.QuickTipManager'
]);
var store;
 function reflash(){
  var tid=parent.pid;
  store.load({params: {pid:tid}});  
  }



Ext.onReady(function(){

    Ext.tip.QuickTipManager.init();


    Ext.define('EimData', {
        extend: 'Ext.data.Model',
        fields: [
            'filename','optype','snap','lxtype','modtime','createuser','sid','optype_desc','snap_desc','type_desc','usbname'
        ],
      idProperty: 'sid'
    });

    // create the Data Store
//重写排序函数，解决远程条件查询问题
    Ext.data.Store.prototype.doSort = function() {
    reflash();
    }
    
       store = Ext.create('Ext.data.Store', {
        pageSize: 40,
        model: 'EimData',
        remoteSort: true,
        proxy: {
            type: 'ajax',
            url: '/pronline/Msg?FunName@lan_Procy_Device',
            reader: {
                type:'json',
                root: 'eimdata',
                totalProperty: 'totalCount'
            },         
            simpleSortMode: true

        },
//        params:{ffffff:'aaaaaa'},
        sorters: [{
            property: 'sid',
            direction: 'ASC'
        }]
    });



    // pluggable renders
 
  
    var pluginExpanded = true;
    
 
 
     var sm = Ext.create('Ext.selection.CheckboxModel',{
        listeners: {
            selectionchange: function(sm, selections) {           
           grid.down('#removeEmployee').setDisabled(selections.length == 0);
                
            }
        }
    
    });
 
 
  
  
//对翻页工具条重新构建，替换翻页函数    
  Ext.PagingToolbar1 = Ext.extend(Ext.PagingToolbar, {
     doRefresh:function(){
    
     reflash();
    },
    moveLast:function(){
    	var b=this,a=b.getPageData().pageCount;
    	if(b.fireEvent("beforechange",b,a)!==false){
    	store.currentPage=a;
    	reflash();
       }},
     moveFirst:function(){
      if(this.fireEvent("beforechange",this,1)!==false){
      store.currentPage=1;
      reflash();}}, 
     movePrevious:function(){var b=this,a=b.store.currentPage-1;if(a>0){if(b.fireEvent("beforechange",b,a)!==false){store.currentPage=a;reflash();}}},
     moveNext:function(){var c=this,b=c.getPageData().pageCount,a=c.store.currentPage+1;if(a<=b){if(c.fireEvent("beforechange",c,a)!==false){store.currentPage=a;reflash();}}}
       
});

Ext.define('State', {
        extend: 'Ext.data.Model',
        fields: [
            {type: 'long', name: 'id'},
            {type: 'string', name: 'name'}
        ]
    });
 
      var store_group = Ext.create('Ext.data.Store', {
        model: 'State',
		autoLoad:true,
        remoteSort: true,
         proxy: {
            type: 'ajax',
            url: '/pronline/Msg?FunName@lan_UsbClass',
            reader: {
                type:'json',
                root: 'data'              
            },    
			
            simpleSortMode: true
        },
		listeners:{
		load:function(store, records,  successful,  eOpts ){
			store.insert(0,{id:99999,name:'全部'});
			for(i=0;i<records.length;i++){
			//alert("111");
		var id = records[i].get('id');
		if(id == 0){
			records[i].set('name','未定义');
		}
		
		}	
		}
		}
    });
    store_group.load();     
 
		function getKeywordData(flag) { 
				var dataStr = "["; 
		     var i=0;
     
          var bCheck=false;
          var fCheck=false;
          var yCheck=false;
		  var zCheck=false;
          var pCheck=false;
          if(flag&0x01){
          	bCheck=true;
          }
          if(flag&0x02){
          	fCheck=true;
          }
          if(flag&0x04){
          	yCheck=true;
          }
		  if(flag&0x08){
          	zCheck=true;
          }
          
		  if(flag&0x20){
          	pCheck=true;
          }

		       	 dataStr=dataStr+"{boxLabel:'禁用U盘',name:'optypeu',checked:"+bCheck+"}";

		       	 dataStr=dataStr+",{boxLabel:'禁止U盘读',name:'optypen',checked:"+fCheck+"}";

				dataStr=dataStr+",{boxLabel:'禁止U盘写',name:'optypey',checked:"+yCheck+"}";
				
				dataStr=dataStr+",{boxLabel:'禁止光盘刻录',name:'optypez',checked:"+zCheck+"}";
				dataStr=dataStr+",{boxLabel:'禁止打印',name:'optypep',checked:"+pCheck+"}";

        dataStr=dataStr+"]";

		return eval(dataStr); 
     
 
   };
		function getRadioSnap(flag) { 

				var dataStr = "["; 
		     var i=0; 
          var bCheck=false;
          var sCheck=false;
          if(flag==2){
          	sCheck=true;
          }
          else{
          	bCheck=true;
          }

		    dataStr=dataStr+"{boxLabel:'不截屏',name:'snap',id:'snap',inputValue:0,checked:"+bCheck+"}";
		    dataStr=dataStr+",{boxLabel:'截屏',name:'snap',inputValue:2,checked:"+sCheck+"}";
        dataStr=dataStr+"]";

		return eval(dataStr); 
     
   };

		function getRadiolx(flag) { 

				var dataStr = "["; 
		     var i=0;
     
          var bCheck=false;
          var lxCheck=false;
          if(flag==1){
          	lxCheck=true;
          }
          else{
          	bCheck=true;
          }

		      dataStr=dataStr+"{boxLabel:'离线有效',name:'lxtype',id:'lxtype',inputValue:0,checked:"+bCheck+"}";
		      dataStr=dataStr+",{boxLabel:'离线无效',name:'lxtype',inputValue:1,checked:"+lxCheck+"}";

        dataStr=dataStr+"]";
		return eval(dataStr); 
     
   };



function openAdd(rcd){
     var optype_flag=0;
     var snap_flag=0;
     var lx_flag=0;
     var temp_sid='';
			var bCheck=false;
			var fCheck=false;
			var yCheck=false;
			var zCheck=false;
			var pCheck=false;
     if(rcd!=''){
     	optype_flag=rcd.get('optype');
     	snap_flag=rcd.get('snap');
     	lx_flag=rcd.get('lxtype');
     	temp_sid=rcd.get('sid');
     	
     	
			if(optype_flag&0x01){
				bCheck=true;
			}
			if(optype_flag&0x02){
				fCheck=true;
			}
			if(optype_flag&0x04){
				yCheck=true;
			}
		  if(optype_flag&0x08){
      	zCheck=true;
      } 
		  if(optype_flag&0x20){
      	pCheck=true;
      }
     	
     	
    }
   
			var fp2=Ext.create('Ext.FormPanel', {
        frame: true,
        fieldDefaults: {
					labelWidth: 110
        },
        width: 600,
        bodyPadding: 10,
        items: [{
        	xtype:"fieldset",
       		title: 'U盘',
        	items:[{
						xtype:'combo',
		        fieldLabel: 'U盘库类别',
		        valueField:'id',
		        displayField: 'name',
		        id : 'webclass',     
		        value:99999,
		        store: store_group,
		        triggerAction: 'all',
						queryMode:'remote',
		        typeAhead: true,
		          listeners: {
		          'change':function(){
	              document.getElementById('form1').id.value=this.value;
	            }
		        },
						listConfig: {
		    			loadingText: 'Searching...',
		    			emptyText: 'No matching found.'
		  			}
        	},{
        		xtype:"checkboxgroup",
        		fieldLabel: '控制方式',
        		id: "optypeU",
						columns: 3,
        		items:[{
        			boxLabel:'禁用U盘',
        			id: 'Uoptypeu',
        			name:'optypeu',
        			inputValue:1,
        			checked:bCheck
        		},{
        			boxLabel:'禁止U盘读',
        			id: 'Uoptypen',
        			name:'optypen',
        			inputValue:2,
        			checked:fCheck
        		},{
        			boxLabel:'禁止U盘写',
        			id: 'Uoptypey',
        			name:'optypey',
        			inputValue:3,
        			checked:yCheck
        		}],
        		listeners:{
        			'change': function(thisField,newValue,oldValue,eOpts){
        				//alert(newValue.optypeu);
        				Ext.getCmp('Uoptypen').setDisabled(false);
        				Ext.getCmp('Uoptypey').setDisabled(false);
        				
        				if(newValue.optypeu == 1){
        					Ext.getCmp('Uoptypen').setDisabled(true);
        					Ext.getCmp('Uoptypey').setDisabled(true);
        				}else{
        					
        				}
        			}
        		}
        	}]
        },{
        	xtype:"fieldset",
       		title: '其他外设',
        	items:[{
        		xtype:"checkboxgroup",
        		fieldLabel: '控制方式',
        		columns: 3,
        		id: "optypeO",
        		items:[{
        			boxLabel:'禁止光盘刻录',
        			name:'optypez',
        			checked:zCheck
        		},{
        			boxLabel:'禁止打印',
        			name:'optypep',
        			checked:pCheck
        		}]
        	}]
        },{
					xtype: 'radiogroup',
					fieldLabel: '是否截屏',
					name:'snap',
					columns: 3,
					margin: "0 0 0 10",
					items: getRadioSnap(snap_flag)
				},{
					xtype: 'radiogroup',
					fieldLabel: '离线是否有效',
					name:'lxtype',
					columns: 3,
					margin: "0 0 0 10",
					items: getRadiolx(lx_flag)
				}]
      });
    
    if(rcd != ""){
    	if(rcd.get('filename') == '99999'){
    		Ext.getCmp('webclass').select(99999);
    	}else{
    		Ext.getCmp('webclass').select(rcd.get('filename'));
    	}
    }
    
         var win2 = new Ext.Window ({
                             id:"addwindow",
                             title:"设备控制策略",
                             x:0,
                             y:0,
                             width:630,
                          	 height:350,
                             bodyPadding: 10,
                             modal:true,
                             resizable:true,
                             items: fp2
                              ,
        buttons: [{
            text: '保存',
            handler: function(){
            	var optype_id='';
//获取check框里的关键字ID

            var gcheckU=Ext.getCmp('optypeU');
            gcheckU.items.each(function(item){
             if(item.checked){
             	 if(item.name=='optypeu'){
             	 	optype_id=optype_id|0x01;
             	}
             	if(item.name=='optypen'){
             		optype_id=optype_id|0x02;
             	}
             	if(item.name=='optypey'){
             		optype_id=optype_id|0x04;
             	}
              if(item.name=='optypez'){
             		optype_id=optype_id|0x08;
             	}
             	if(item.name=='optypep'){
             		optype_id=optype_id|0x20;
             	} 
             }
            });
            var gcheckO=Ext.getCmp('optypeO');
            gcheckO.items.each(function(item){
             if(item.checked){
             	 if(item.name=='optypez'){
             		optype_id=optype_id|0x08;
             		}
             	if(item.name=='optypep'){
             		optype_id=optype_id|0x20;
             	} 
             }
            });
           
			
             var snap_id=Ext.getCmp('snap').getGroupValue();
             var lx_id=Ext.getCmp('lxtype').getGroupValue();
             var filename= Ext.getCmp('webclass').getValue();
			
             if(optype_id==''){
             	alert('请选择控制方式');
             	return;
            }
             var temp_id=parent.pid;
            
	           store.load({params:{update:"update",pid:temp_id,optype:optype_id,snap:snap_id,lxtype:lx_id,filename:filename,sid:temp_sid}});
	            Ext.getCmp('addwindow').close();
       
            }
        },{
            text: '关闭',
            handler: function(){
              Ext.getCmp('addwindow').close();

            }
         }]                 
         }
        )
        win2.show();
   
}






    var grid = Ext.create('Ext.grid.Panel', {
 
        height: 980,
         stripeRows: true,
        store: store,
        selModel: sm,
     //  forceFit: true,
        scrollOffset: 0,
        frame:true,
       
        // grid columns
        columns:[{
          header: '修改',
          xtype: 'actioncolumn',
          dataIndex: 'userid',
          icon: '/images/v8/edit_task.png',
          tooltip: '点击该图标进入修改界面。',
          flex: 1,
          align: 'center',
          sortable: false,
          handler: function(grid, rowIndex, colIndex, actionItem, event, record, row) {
            openAdd(record)
          }

        },{
            text: "U盘库",
            dataIndex: 'usbname',
            hidden: false,
            flex: 2,
            sortable: false,
            renderer: function(value,metaData,record){
            	if(record.get('filename') == 99999){
            		return "全部";
            	}else if(record.get('filename') == 0){
            		return "未定义";
            	}
            	return value;
            }
        },{
            text: "控制方式",
            dataIndex: 'optype_desc',  
            flex: 8,          
            hidden:false,
            sortable: true

        },
        {
            text: "触发是否截屏",
            dataIndex: 'snap_desc',
            hidden: false,
            flex: 2,
            sortable: false
        },
        {
            text: "离线是否有效",
            dataIndex: 'type_desc',
            hidden: false,
            flex: 2,
            sortable: false
        },
        {
            text: "修改时间",
            dataIndex: 'modtime',
            hidden: false,
            flex: 3,
            sortable: false
        },
        {
            text: "操作人",
            dataIndex: 'createuser',
            hidden: false,
            flex: 2,
            sortable: false
        },
        {
            flex:1,
            sortable: false
        }],
        
        columnLines: true,
                                        
        // paging bar on the bottom
 
        tbar: Ext.create('Ext.PagingToolbar1', {
            store: store,
            
            displayInfo: true,
            displayMsg: '共<font color=red>{2}</font>条记录',
            emptyMsg: "共0条记录",
                                       
            items: [
             {               
                text:'添加',
                iconCls:'add',
                handler: function(){
                	if(parent.pid==''){
                		alert('请先点击左侧策略树，选取主策略');
                		return;
                	}
                  openAdd('');
              
                }
            },
             {
            itemId: 'removeEmployee',
            text: '删除',
            iconCls: 'remove',

                handler:function(){
             
							   if(confirm('您真的要执行删除操作吗？')){                  
                 var selsid;  
                 var rows=sm.getSelection();
                   selsid='';
                  for(var i=0;i<rows.length;i++){
                  	if(i==0){
                  	 selsid=rows[i].getId();
                  	}
                  	else{
                       selsid=selsid+","+rows[i].getId();
                    }
                   
                   }
                   var temp_id=parent.pid;
                      store.load({params: {del: "del",selsid:selsid,pid:temp_id}});
                  
                
              }
                
            },
            disabled: true
        },{
	        		text: "应用",
	        		handler: function(){
	        			parent.ncapp.onItemReflash();
	        		}
	        	}]
       

        })
        

        ,
        renderTo: 'grid-corp'
    });

    // trigger the data store load
       reflash();
    
    
 //    store.loadPage(1);

});


</script>
    
    
