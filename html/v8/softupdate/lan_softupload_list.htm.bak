                   if(keyword=='输入登录名/姓名查询'){
                      keyword='';
                   }
                   store.load({params:{del:"del",selsid:selsid,keyword:keyword}});
            
                 }  
                 
                }
                

 
                
            }
                        
        ]
       

        }),
       
        
        renderTo: 'grid-corp'
