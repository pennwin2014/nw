            items: [
 //          '->',
   
             {
               xtype:'textfield',
               id:'keyword1',
               name:'keyword1',
               style:'color:#7aa7d5',
               width:'120px',
               value:'输入登录名/姓名查询',
               enableKeyEvents:true,
