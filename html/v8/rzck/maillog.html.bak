  var store;
  var store1;
  var adv = "0";//标记
  function reflash1(){
    var groupid = parent.groupid;
    var did = "";
    var keyword = Ext.getCmp('keyword').value;//用户名
    var sip=document.getElementById("form1").sip.value = "";//源IP地址
    var corpname=document.getElementById("form1").corpname.value = "";//单位名称
    var idno=document.getElementById("form1").idno.value = "";//证件号码
    var sdate=document.getElementById("form1").sdate.value = "";//起始日期
    var edate=document.getElementById("form1").edate.value = "";//结束日期
    var dip=document.getElementById("form1").dip.value = "";//目标IP地址
    var mfrom=document.getElementById("form1").mfrom.value = "";//协议类型
    var mto=document.getElementById("form1").mto.value = "";//端口
    var dispname=document.getElementById("form1").dispname.value = "";//
    var mailasize=document.getElementById("form1").mailasize.value = "";//
    var time_flag="";
    store.load({params: {groupid:groupid,did:did,dispname:dispname, sip:sip, corpname:corpname, idno:idno, sdate:sdate, edate:edate, dip:dip, mfrom:mfrom, mto:mto, keyword:keyword, mailasize:mailasize, time_flag:time_flag}});  
  }
  
  function reflash2(){
    var groupid = parent.groupid;
    var did = "";
    var dispname=document.getElementById("form1").dispname.value;
    var sip=document.getElementById("form1").sip.value;//源IP地址
    var corpname=document.getElementById("form1").corpname.value;//单位名称
    var idno=document.getElementById("form1").idno.value;//证件号码
    var sdate=document.getElementById("form1").sdate.value;//起始日期
    var edate=document.getElementById("form1").edate.value;//结束日期
    var dip=document.getElementById("form1").dip.value;//目标IP地址
    
    var mfrom=document.getElementById("form1").mfrom.value;//协议类型
    var mto=document.getElementById("form1").mto.value;//端口
    var mailsub=document.getElementById("form1").mailsub.value;//
    var mailasize=document.getElementById("form1").mailasize.value;//
    
    var time_flag="";
    store.load({params: {groupid:groupid, did:did, dispname:dispname, sip:sip, corpname:corpname, idno:idno, sdate:sdate, edate:edate, dip:dip, mfrom:mfrom, mto:mto, mailsub:mailsub, mailasize:mailasize, time_flag:time_flag}});  
  }
  
  function reflash(){
    if(adv == "1"){
      reflash2();
    }else{
      reflash1();
    }
  }
  
  function  show_enduser(value,p,record){
    var oArr = record.data.dispname.split("_");
    return Ext.String.format( '<a href="#xxm" onclick=_show_enduser("{0}","{1}")>{2}</a>',oArr[1], oArr[2], oArr[0]);
  }
      
  function _show_corpinfo(did){
    var htmlvar='<iframe src="/pronline/Msg?FunName@ncsWebDispClientAddForm_v4&plate@v4/nc_form_clientinfo.htm&userid@'+did+'" scrolling="no" name="moduleIframe" frameborder="no" style="width:100%;height:100%;"></iframe>';  
          
    var win = new Ext.Window ({
      id:"addwindow",
      title:"联网单位信息",
      x:0,
      y:0,
      width:670,
      height:600,
      bodyPadding: 0,
      modal:false,
      resizable:true,
      draggable:true,
      html:htmlvar
    });
    win.show();
  }
      
  function show_corpinfo(value, p, record){
    var oArr = record.data.corpname.split("_");
    return Ext.String.format( '<a href="#xxm" onclick=_show_corpinfo("{0}")>{1}</a>',oArr[1],oArr[0]);
  }
      
  function _viewmail(table, stime, mailfile,sid){
    var htmlvar='<iframe src="/pronline/Msg?FunName@ncsShowOneMail_v4&table@' + table + "&stime@" + stime + "&mailfile@" + mailfile + "&sid@"+sid+'" scrolling="no" name="moduleIframe" frameborder="no" style="width:100%;height:100%;"></iframe>';      
  
    var win = new Ext.Window ({
      id:"addwindow3",
      title:"显示邮件",
      x:0,
      y:0,
      width:500,
      height:600,
      bodyPadding: 0,
      modal:false,
      resizable:true,
      draggable:true,
      html:htmlvar
    });
    win.show();
  }
      
  function viewmail(value, p, record){
    var oArr = record.data.showmail.split(";");
    return Ext.String.format('<a href="#xxm" onclick=_viewmail("{0}","{1}","{2}","{3}")>查看</a>', oArr[0], oArr[1], oArr[2], oArr[3]);
  }
      
  function _show_othlog(sdate,edate, did, uid){
    var width1 = screen.width;
    var htmlvar='<iframe src="/pronline/Msg?FunName@ncupWebReplace&plate@v4/ncs_yjcx_tab.html&tab@7&sdate@'+sdate + '&edate@' + edate + '&did@' + did + '&uid@' + uid + '" scrolling="no" name="moduleIframe" frameborder="no" style="width:100%;height:100%;"></iframe>';              
    var win = new Ext.Window ({
      id:"addwindow",
      title:"其他日志",
      x:0,
      y:0,
      width:width1,
      height:580,
      bodyPadding: 0,
      modal:false,
      resizable:true,
      draggable:true,
      html:htmlvar
    });
    win.show();
  }
      
  function show_othlog(value, p, record){
    var oArr = record.data.othlog_param.split("_");
    return Ext.String.format( '<a href="#xxm" onclick=_show_othlog("{0}","{1}","{2}","{3}")>其他日志</a>', oArr[0], oArr[1], oArr[2],oArr[3]);
  }
   
  var fp2;
 //高级查询
  var win2 = null;
  function showCxForm(){
    if (!win2){
      win2 = Ext.widget('window',{
        title: '高级查询',
        closeAction: 'hide',
        x:380,
        y:32,
        width: 280,
        height: 400,
        minHeight: 320,
        resizable: true,
        modal: false,
        items: fp2
      });
    }
    win2.on("beforeclose", function() {
      document.getElementById("time_flag").value=document.getElementById("form1").time_flag.value;
    });
            
    win2.show();
  } 
      
  Ext.onReady(function(){
    Ext.define("Corp",{
      extend: 'Ext.data.Model',
      proxy:{
        type: 'ajax',
        url: '/pronline/Msg?FunName@ncsSearchCorp_v4',
        reader: new Ext.data.JsonReader({
          type:'json',
          root: 'eimdata1',
          totalProperty: 'totalCount'
        }),        
        simpleSortMode: true
      },
      fields: [
        {name: 'username', mapping: 'username'},
        {name: 'dispname', mapping: 'dispname'}
      ]
    });
    store1 = Ext.create('Ext.data.Store', {
      pageSize: 10000,
      model: 'Corp'
    });
    
    Ext.define('EimData',{
      extend: 'Ext.data.Model',
      fields:[
        'corpname', 'dispname', 'stime', 'mtype', 'sip', 'dip', 'mfrom', 'mto', 'mailsub', 'mailsize', 'mailasize', 'showmail', 'othlog_param'
      ]
    });
    store = Ext.create('Ext.data.Store',{
      pageSize: 37,
      model: 'EimData',
      remoteSort: true,
      proxy:{
        type: 'ajax',
        url: '/pronline/Msg?FunName@ncsMailSearch_v4',
        reader: {
          type:'json',
          root: 'eimdata1',
          totalProperty: 'totalCount'
        },         
        simpleSortMode: true
      },
      sorters: [{
        property: 'stime',
        direction: 'DESC'
      }]
    });
    
    var handleAction = function(action){
       if(action=='cx'){
       }
    };
        
    var myDate = new Date();
    var yy = ( myDate.getYear() < 1900 ) ? ( 1900 + myDate.getYear() ) : myDate.getYear();
    var mm=myDate.getMonth()+1;
    if(mm<10){
      mm='0'+mm;
    }
    var dd=myDate.getDate();
    if(dd<10){
      dd='0'+dd;
    }
    var today=yy+'/'+mm+'/'+dd;
    var startday=yy+'/'+mm+'/'+'01';
     
    fp2=Ext.create('Ext.FormPanel', {         
      frame: true,
      fieldDefaults: {
        labelWidth: 70,     
         xtype: 'textfield' 
      },
      bodyPadding: 4,
      items: [{                        
        fieldLabel:'起始日期',
        xtype: 'datefield',
        format: "Y/m/d",
        value:startday,
        name:'sdate'
      },{
        fieldLabel:'结束日期',
        xtype: 'datefield',
        format: "Y/m/d",
        value:today,
        name:'edate'
      },{
        xtype: 'combo',
        fieldLabel: '单位名称',
        name: 'corpname',
        store: store1,
        displayField: 'dispname',
        typeAhead: false,
        hideTrigger:true,
        anchor: '100%',
        minChars: 1,
        listConfig: {
          loadingText: 'Searching...',
          emptyText: 'No matching found.'
        }
      },{
        fieldLabel:'证件号码',
        xtype: 'textfield',
        name:'idno'
      },{
        fieldLabel:'源IP地址',
        xtype: 'textfield',
        name:'sip'
      },{
        fieldLabel:'目标IP地址',
        xtype: 'textfield',
        name:'dip'
      },{
        xtype : 'fieldcontainer',
        combineErrors: true,
        msgTarget: 'side',
        fieldLabel: '有无附件',
        defaults: {
          hideLabel: true
        },
        items : [{
          width:          100,
          xtype:          'combo',
          mode:           'local',
          value:          '0',
          triggerAction:  'all',
          forceSelection: true,
          editable:       false,
          fieldLabel:     'Title',
          name:           'mailasize',
          displayField:   'name',
          valueField:     'value',
          queryMode:   'local',
          store:          Ext.create('Ext.data.Store', {
            fields : ['name', 'value'],
            data   : [
              {name : '不限',value: '0'},
              {name : '无',  value: '1'},
              {name : '有',  value: '2'}
            ]
          })
        }]
      },{
        fieldLabel:'发件人',
        xtype: 'textfield',
        name:'mfrom'
      },{
        fieldLabel:'收件人',
        xtype: 'textfield',
        name:'mto'
      },{
        fieldLabel:'邮件主题',
        xtype: 'textfield',
        name:'mailsub'
      },{
        fieldLabel:'用户名包含',
        xtype: 'textfield',
        name:'dispname'
      },{
        xtype: 'button',
        anchor: 'right',
         style : 'margin-left:80px',
        text:'查询',
         handler: function(){
           adv = "1";
           document.getElementById("form1").groupid.value = "";
           document.getElementById("form1").did.value = "";
           document.getElementById("form1").sdate.value=fp2.getForm().getValues().sdate;  
           document.getElementById("form1").edate.value=fp2.getForm().getValues().edate;
           if(fp2.getForm().getValues().corpname == undefined){
             document.getElementById("form1").corpname.value = "";
           }else{
             document.getElementById("form1").corpname.value=fp2.getForm().getValues().corpname;  
           }
           document.getElementById("form1").idno.value=fp2.getForm().getValues().idno; 
           document.getElementById("form1").sip.value=fp2.getForm().getValues().sip; 
           document.getElementById("form1").dip.value=fp2.getForm().getValues().dip; 
           document.getElementById("form1").mfrom.value=fp2.getForm().getValues().mfrom; 
           document.getElementById("form1").mto.value=fp2.getForm().getValues().mto;  
           document.getElementById("form1").mailsub.value=fp2.getForm().getValues().mailsub;  
           document.getElementById("form1").mailasize.value=fp2.getForm().getValues().mailasize;  
           document.getElementById("form1").dispname.value=fp2.getForm().getValues().dispname;  
            
           store.currentPage=1;
           if (fp2.getForm().getValues().sdate == undefined || fp2.getForm().getValues().edate == undefined ){
             
           }else{
             reflash();
           }
           win2.close();
         }
      },{
        text: '清除',
        style : 'margin-left:10px',
        xtype: 'button',
        handler: function(){
          fp2.getForm().reset();
        }
      }]
    });
        
    //对翻页工具条重新构建，替换翻页函数    
    Ext.PagingToolbar1 = Ext.extend(Ext.PagingToolbar, {
       doRefresh:function(){
         reflash();
      },
      onPagingKeyDown:function(i,h){
         var d=this,b=h.getKey(),c=d.getPageData(),a=h.shiftKey?10:1,g;
         if(b==h.RETURN){
           h.stopEvent();
           g=d.readPageFromInput(c);
          if(g!==false){
             g=Math.min(Math.max(1,g),c.pageCount);
             if(d.fireEvent("beforechange",d,g)!==false){
               d.store.currentPage=g;
               reflash();
            }        
          }
        }else{
          if(b==h.HOME||b==h.END){
            h.stopEvent();
            g=b==h.HOME?1:c.pageCount;i.setValue(g)
          }else{
            if(b==h.UP||b==h.PAGEUP||b==h.DOWN||b==h.PAGEDOWN){
              h.stopEvent();
              g=d.readPageFromInput(c);
              if(g){
                if(b==h.DOWN||b==h.PAGEDOWN){
                  a*=-1
                }
                g+=a;
                if(g>=1&&g<=c.pages){
                  i.setValue(g)
                }
              }
            }
          }
        }
      },
      moveLast:function(){
        var b=this;
        var a=b.getPageData().pageCount;
        if(b.fireEvent("beforechange",b,a)!==false){
          store.currentPage=a;
          reflash();
         }
       },
       moveFirst:function(){
        if(this.fireEvent("beforechange",this,1)!==false){
          store.currentPage=1;
          reflash();
        }
      }, 
       movePrevious:function(){
         var b=this;
         var a=b.store.currentPage-1;
         if(a>0){
           if(b.fireEvent("beforechange",b,a)!==false){
             store.currentPage=a;
             reflash();
           }
         }
       },
       moveNext:function(){
         var c=this;
         var b=c.getPageData().pageCount;
         var a=c.store.currentPage+1;
         if(a<=b){
           if(c.fireEvent("beforechange",c,a)!==false){
             store.currentPage=a;
             reflash();
           }
         }
       }
    });

    var width1=screen.width;
    var height1 = screen.height;
    var grid = Ext.create('Ext.grid.Panel', {
      height: 980,
      store: store,
      frame:true,
      columns:[
        {text: "单位名称",  dataIndex: 'corpname',  width: 100, sortable: false, renderer: show_corpinfo},
        {text: "用户名",    dataIndex: 'dispname',  width: 100, sortable: false, renderer: show_enduser},
        {text: "源IP地址",  dataIndex: 'sip',       width: 100, sortable: false },
        {text: "开始时间",  dataIndex: 'stime',     width: 100, sortable: false },
        {text: "邮件类型",  dataIndex: 'mtype',     width: 100, sortable: false },
        {text: "发件人",    dataIndex: 'mfrom',     width: 100, sortable: false },
        {text: "收件人",    dataIndex: 'mto',       width: 100, sortable: false },
        {text: "主题",      dataIndex: 'mailsub',   width: 100, sortable: false },
        {text: "邮件大小",  dataIndex: 'mailsize',  width: 100, sortable: false },
        {text: "附件",      dataIndex: 'mailasize', width: 100, sortable: false },
        {text: "查看",      dataIndex: 'showmail',  width: 100, sortable: false, renderer: viewmail}
      ],
      columnLines: true,
      tbar: Ext.create('Ext.PagingToolbar1', {
        store: store,
        displayInfo: true,
        displayMsg: '显示{0} - {1}条记录 共{2}条记录',
        emptyMsg: "没有记录可显示",
        items: [
        '-',
        {
          xtype:'label',
          html:'&nbsp;<select name="time_flag" id="time_flag"  onchange="if(this.value==9){showCxForm();return;};document.getElementById(\'form1\').time_flag.value=this.value;adv = \'0\';store.currentPage=1;pastime();reflash()"><option value="1">今天</option><option value="2">最近三天</option><option value="3">最近一周</option><option value="4">最近一月</option><option value="5">最近三月</option><option value="6">最近半年</option><option value="9">自定义时间</option></select>关键字包含'
        },{
          xtype:'textfield',
          id:'keyword',
          name:'keyword',
          enableKeyEvents:true,
          style:'color:#7aa7d5',
          width:'120',
          value:' ',
          listeners:{
            'focus':function(){
              if(this.value==' '){                
                this.setValue('');
              }
            },
            'keydown' : function(i,e){
              var aae=e.getKey() ; 
              if(aae==13){
                store.currentPage=1;
                adv = "0";
                reflash();
              }
            }
          }
        },{
          text:'确认',
          iconCls:'accept',
          handler: function(){
            store.currentPage=1;
            adv = "0";
            reflash();
          }
        },
        '-',
        {
          text:'高级',
          anchor: 'right',
          handler: showCxForm,
          iconCls:'option'
        },
        '-',
        {
          text:'导出',
          iconCls:'exp',
          handler:function(){
            document.getElementById('form1').exp.value='exp';
            document.getElementById("form1").submit();
            document.getElementById("form1").exp.value=""; 
          }
        }]
      }),
      renderTo: 'grid-corp'
    });
    reflash();
  });
</script>
