<script>
    var doflags=0;
   function doBegin()
   {
        a=screen.width-310;
        b=screen.height-210;
        window.moveTo(a,b);
        window.resizeTo(300,230);
 
   }
   function doEnd(){
    if(confirm('关闭窗口时，请先检查是否已按断开连接按钮。\n按\"确认"关闭窗口,\"取消\"保留窗口'))
     return ;
    else
     return false;
   }
  function doExit()
  {
      if(confirm("真的要断开连接吗?")) {
           doflags = 1;
           self.location.href="/proauth/Msg?FunName@ncBillLogout&userid@[#userid#]&sid@[#sid#]";
           self.close();
      }
  }

  function goto()
   {
       doflags = 1;
       self.location.href="/proauth/Msg?FunName@ncBillHeat&userid@[#userid#]&sid@[#sid#]";
   }


  function gotoNew(t)
  {
       openwinflag=window.open(t,'ncpass','fullscreen=0,titlebar=no,toolbar=no,scrollbars=no,resizable=1,menubar=no,status=0,width=450,height=400');
   }

  function gotoDetail()
  {
       openwinflag=window.open("/proauth/Msg?FunName@ncWebBilFeeDetail&userid@[#userid#]&username@[#username#]",'ncpass','fullscreen=0,titlebar=no,toolbar=no,scrollbars=yes,resizable=1,menubar=no,status=0,width=400,height=500');
   }



  function doConfirm()
  {
      if(doflags == 0) {
          openwinflag=window.open("/proauth/Msg?FunName@ncBillHeat&userid@[#userid#]&sid@[#sid#]",'ncauth','fullscreen=0,titlebar=no,toolbar=no,scrollbars=no,resizable=1,menubar=no,status=0');
          return false;
      }
  }


</script>
